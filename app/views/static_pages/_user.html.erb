<div id = user_<%= user.id %> class = "user container-fluid" >

  <div class="row">

    <%# 順位 %>
    <div class="col-1 d-flex">
      <span class="rank">
        <%# ページネートに合わせて順位を表示。1ページ目はnil %>
        <% if params[:users_page] %>
          <%= i + 20 * ( params[:users_page].to_i - 1 ) %><%= t('.place')%>
        <% else %>
          <%= i + 20 * params[:users_page].to_i %><%= t('.place')%>
        <% end %>
      </span>
    </div>

    <%# ユーザーポイント %>
    <div class="col-1">
      <span class="score"><a><%= user.user_point.total_point.floor %></a></span>
    </div>

    <%# ユーザー名 %>
    <div class="col-7 d-flex static-user-name">
        <%= link_to display_name(user), user %>
    </div>
  </div>
</div>