<div id = user_<%= user.id %> class = "user container-fluid" >

  <div class="row">

    <%# 順位 %>
    <div class="col-sm-1 col-2">
      <span class="rank ml-1 ml-sm-3">
        <%# ページネートに合わせて順位を表示。1ページ目はnil %>
        <% if params[:page] %>
          <%= i + 20 * ( params[:page].to_i - 1 ) %>位
        <% else %>
          <%= i + 20 * params[:page].to_i %>位
        <% end %>
      </span>
    </div>

    <%# ユーザーポイント %>
    <div class="col-2 col-lg-1 px-0 py-auto">
      <span class="user_point score"><%= user.user_point.total_point %></span>
    </div>

    <%# ユーザー名 %>
    <div class="col-sm-9 col-3 p-0 p-sm-auto">
      <%= link_to user.name, user %>
    </div>

    <div class="col-sm-1 col-1 p-0 p-sm-auto" >
    </div>
  </div>
</div>