<div id = teacher_<%= teacher.id %> class = "teacher container" >

  <div class="row">

    <div class="col">
      <span class="rank">
        <%# ページネートに合わせて順位を表示。1ページ目はnil %>
        <% if params[:page] %>
          <%= i + 20 * ( params[:page].to_i - 1 ) %>位
        <% else %>
          <%= i + 20 * params[:page].to_i %>位
        <% end %>
      </span>
    </div>

    <%# スコア %>
    <div class="col">
      <span class="score"><%= teacher.average_score %></span>
    </div>

    <div class="col">
      <%= link_to teacher.name, teacher %>
    </div>

  </div>

</div>