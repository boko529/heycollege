<% provide(:title, "Home") %>
<%# 運営からのメッセージがあったら表示する %>
<% if @news.exists? %>
  <% @news.each do |news| %>
    <%= link_to news.title, news, class:"news_by" %>
  <% end %>
<% end %>
<div class="ranking-index">
  <h2>ランキング</h2>
  <nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
      <a class="nav-item nav-link active" id="nav-lecture-ranking-tab" data-toggle="tab" href="#nav-lecture-ranking" role="tab" aria-controls="nav-lecture-ranking" aria-selected="true">講義</a>
      <a class="nav-item nav-link" id="nav-teacher-lanking-tab" data-toggle="tab" href="#nav-teacher-lanking" role="tab" aria-controls="nav-teacher-lanking" aria-selected="false">先生</a>
    </div>
  </nav>
  <div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-lecture-ranking" role="tabpanel" aria-labelledby="nav-lecture-ranking-tab">
      <ul class="rankings">
        <% @lectures.each do |lecture| %>
          <%= render lecture %>
        <% end %>
        <%= paginate @lectures, theme: 'twitter-bootstrap-4' %>
      </ul>
    </div>
    <div class="tab-pane fade" id="nav-teacher-lanking" role="tabpanel" aria-labelledby="nav-teacher-lanking-tab">
      <ul class="rankings">
        <% @teachers.each do |teacher| %>
          <%= render teacher %>
        <% end %>
        <%= paginate @teachers, theme: 'twitter-bootstrap-4' %>
      </ul>
    </div>
  </div>
</div>