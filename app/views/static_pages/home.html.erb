<% provide(:title, "Home") %>
<%# 運営からのメッセージがあったら表示する %>
<% if @news.exists? %>
  <% @news.each do |news| %>
    <%= link_to news.title, news, class:"news_by" %>
  <% end %>
<% end %>
<div class="lectures-index">
  <h2>講義ランキング</h2>
  <ul class="lectures">
    <% @lectures.each do |lecture| %>
      <%= render lecture %>
    <% end %>
    <%= paginate @lectures, theme: 'twitter-bootstrap-4' %>
  </ul>
</div>
<div class="teachers-index">
  <h2>先生ランキング</h2>
  <ul class="teachers">
    <% @teachers.each do |teacher| %>
      <%= render teacher %>
    <% end %>
    <%= paginate @teachers, theme: 'twitter-bootstrap-4' %>
  </ul>
</div>