<li id="review-<%= review.id %>" class = "review list-group-item" >
    <span class="star" data-rating="<%= review.score %>"></span>

  <p><%= link_to review.lecture.name, review.lecture %></p>
  <%= link_to review.user do %>
    <%= gravatar_for review.user, 20 %><%= review.user.name %>
  <% end %>
  <p class="content">
    <%= safe_join(review.content.split("\n"),tag(:br)) %>
  </p>
  <p class="timestamp">
    <%= review.updated_at.strftime("%Y-%m-%d") %>
  </p>

  <%# 役に立ったボタン %>
  <div id="helpfuls_buttons_<%= review.id %>">
    <%= render partial: 'helpfuls/helpful', locals: { lecture: review.lecture, review: review } %>
  </div>
</li>