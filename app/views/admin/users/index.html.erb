<% provide(:title, 'User一覧') %>
<h1>User</h1>

<table>
    <tr>
    <th>id</th>
    <th>name</th>
    <th>Grade</th>
    <th>gender</th>
    <th>faculty</th>
    <th>point</th>
    <th>class</th>
    <th>review</th>
    <th>group</th>
    <th>is_deleted?</th>
    </tr>
    <% @users.each do |user| %>
      <% if user.admin == false %>
        <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.grade %></td>
        <td><%= user.gender %></td>
        <td><%= user.faculty %></td>
        <td><%= user.user_point.current_point %></td>
        <td><%= user.lectures.count %></td>
        <td><%= user.reviews.count %></td>
        <td><%= user.group.count %></td>
        <td><%= user.is_deleted %></td>
        </tr>
      <% end %>
    <% end %>
</table>
</ul>