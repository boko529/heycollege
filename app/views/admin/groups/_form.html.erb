<%= form_with(model: [:admin, @group], local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <div class="groupshow-edit">

  <%= f.label "グループ名" %>
  <%= f.text_field :name, class: 'form-control' %>

  <%# 管理者ユーザーのemailを入力 %>
  <%= f.label "ホストユーザーのemail" %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :university_id %>
  <%= f.select :university_id, {'アジア太平洋大学': 1, '大阪府立大学': 2}, { include_blank: '選択してください'}, { class: 'form-control'} %>

  <%# ユーザーの大学内のみで検索 %>
  <%= f.hidden_field :university_id_cont, value: current_user.university_id %>
  
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>