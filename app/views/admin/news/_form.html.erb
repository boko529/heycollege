<%= form_with(model: [:admin, @news], local: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control', placeholder: "(30字以内) 例, <お知らせ>3/27からメンテナンスをします" %>

  <%= f.label :message %>
  <%= f.text_area :message, class: 'form-control',size: "20x10", maxlength: "600", placeholder: "(300字以内)例,いつもサイトを使ってくれてありがとうございます！！" %>
  
  <%= f.submit yield(:button_text), class: "btn btn-primary", data: { confirm: "全てのユーザーに表示されます。本当に送信しますか？"} %>
<% end %>