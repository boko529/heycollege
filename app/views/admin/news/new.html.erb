<% provide(:title, "お知らせ作成") %>
<% provide(:button_text, "送信") %>
<h1>お知らせ新規作成ページ</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
  </div>
</div>

<ul>
  <% @past_news.each do |news| %>
    <%= link_to news_path(news) do %>
      <li>
        <%= news.university.name_ja %><br><%= news.title %>
      </li>
    <% end %>
  <% end %>
</ul>
