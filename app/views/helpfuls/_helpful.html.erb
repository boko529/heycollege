<% if current_user?(review.user) %>
  <%# 自分のレビューに対して %>
  <p>役に立った😊： <%= review.helpfuls.count %></p>
<% else %>
  <% if review.helpfuled_by?(current_user) %>
    <%# 自分のレビューじゃない&&参考になるを押した %>
    <p>ありがとうございます😊： <%= review.helpfuls.count %></p>
  <% else %>
    <%# 自分のレビューじゃない&&参考になるを押してない %>
    <p><%=link_to "役に立った： #{review.helpfuls.count}", lecture_review_helpfuls_path(lecture_id: @lecture.id, review_id: review.id), method: :post, remote: true %></p>
  <% end %>
<% end %>