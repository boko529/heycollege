<% provide(:title, t('.following')) %>
<div class="col-lg-6 offset-lg-3">
    <div class="following-follower-index">
        <h2><%= t('.following') %></h2>
        <% @followings.each do |f_user| %>
            <ul class="following-follower">
                <%= link_to f_user.becomes(User) do %>
                    <div id="item1">
                        <%= render partial: "shared/user_image/display_icon20", locals: {user: f_user} %>
                    </div>
                <% end %>
                <%= link_to f_user.becomes(User) do %>
                    <div class="follow-name" id="item2">
                        <%= u_display_name(f_user) %>
                    </div>
                <% end %>
                <%= f_user.faculty_i18n %>
                <div id='follow-button_<%= f_user.id %>'>
                    <div id="item3">
                     <%= render 'users/follow-button', user: f_user  %>
                    </div>
                </div>
            </ul>     
        <% end %>
    </div>
</div>