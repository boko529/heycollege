<% if user != current_user %>
    <% if user_signed_in? %>
        <% if current_user.following?(user) %>
            <%= link_to t('.unfollow'), unfollow_path(user), method: :post, class: 'btn btn-info', data: { confirm: '本当にフォロー解除しますか？' }, remote: true%>
        <% else %>
            <%= link_to t('.follow'), follow_path(user), method: :post, class: 'btn btn-outline-info', remote: true %>
        <% end %>
    <% else %>
        <%= link_to t('.follow'), follow_path(user), method: :post, class: 'btn btn-outline-info', remote: true %>
    <% end %>
<% end %>