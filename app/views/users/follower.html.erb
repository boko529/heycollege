<% provide(:title, 'フォロワー') %>
<div class="col-lg-6 offset-lg-3">
    <div class="following-follower-index">
        <h2><%= t('.follower') %></h2>
        <% @followers.each do |f_user| %>
        <ul class="following-follower">
            <%= link_to f_user do %>
                <%= render partial: "shared/user_image/display_icon20", locals: {user: f_user} %><%= display_name(f_user) %>
            <% end %>
            <%= f_user.faculty_i18n %>
            <span id='follow-button_<%= f_user.id %>'>
                <span class="follow-btn">
                    <%= render 'users/follow-button', user: f_user  %>
                </span>
            </span>
        </ul>     
        <% end %>
    </div>
</div>