<% provide(:title, 'フォロワー') %>
<div class="col-lg-6 offset-lg-3">
    <div class="following-follower-index">
        <h2><%= t('.follower') %></h2>
        <% @followers.each do |f_user| %>
        <ul class="following-follower">
            <div class="circle">
                <%= image_tag 'default_user.png', :size => '50x50' %>
            </div>
            <%= link_to display_name(f_user), user_path(f_user.id) %>
            <%= f_user.faculty_i18n %>
            <span id='follow-button_<%= f_user.id %>'>
                <span class="follow-btn">
                    <%= render 'users/follow-button', user: f_user  %>
                </span>
            </span>
        </ul>     
        <% end %>
    </div>
</div>