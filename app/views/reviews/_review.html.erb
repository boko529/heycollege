<li id="review-<%= review.id %>" class = "review list-group-item" >

  <h4 class="title">
    <span><%= review.score %></span>
    <%= link_to review.title, lecture_review_path(@lecture.id, review.id) %>
  </h4>
  <span class="username"><%= review.user.name %></span>
  <p class="content">
    <%= review.content.truncate(24, omission: '・・・') %>
  </p>
  <span>わかりやすさ：<%= review.explanation %></span>
  <span>評価の公正さ：<%= review.fairness %></span>
  <span>友達への勧めたさ：<%= review.recommendation %></span>
  <span>役に立ったか：<%= review.useful %></span>
  <span>おもしろさ：<%= review.interesting %></span>
  <span>難易度：<%= review.difficulty %></span>
  <p class="timestamp">
    <%= review.updated_at.strftime("%Y-%m-%d") %>
  </p>
  <% if review.helpfuled_by?(current_user) %>
      <p><span>役に立った(済): </span><%=link_to review.helpfuls.count, lecture_review_helpful_path(@lecture.id, review.id), method: :delete %></p>
  <% else %>
      <p><span>役に立った: </span><%=link_to review.helpfuls.count, lecture_review_helpfuls_path(@lecture.id, review.id), method: :post %></p>
  <% end %>
</li>