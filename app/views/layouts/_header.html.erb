<header>
  <div class="container-fluid"> 
    <div class="row w-100 h-auto">
      <div class="logo col-2">
        <%= link_to image_tag("HeyCollegelogo.png", alt: "ロゴ", width: "100px", id: 'logo'), root_path %>
      </div>
      <div class="search col-6 offset-2">
        <%# 検索バー %>
        <%= search_form_for @q, class: "form-inline", url: lectures_path do |f| %>
          <div class="input-group">
            <div class="input-group-append">
              <%= f.search_field :name_cont, class: "form-control" ,placeholder: '検索する講義名を入力...' %>
            </div>
            <%# 詳細検索表示ボタン %>
            <p>
              <button class="btn btn-outline-success" type="button" data-toggle="collapse" data-target="#collapseSearchLecture" aria-expanded="false" aria-controls="collapseSearchLecture">
                条件検索
              </button>
            </p>
            <%= f.submit ("検索") , class: 'btn btn-outline-success'%>
            <p>
            <button class="btn btn-outline-success" type="button" data-toggle="collapse" data-target="#collapsemyreview" aria-expanded="false" aria-controls="ccollapsemyreview">過去のレビュー</button>
            </p>
          </div>
        <% end %>
      </div>
      <% if user_signed_in? %>
        <div class="user col-1">
          <%= link_to user_path(current_user) do %>
            <i class="fas fa-user-circle fa-2x"></i>
          <% end %>
        </div>
        <div class="bell col-1">
          <%= link_to notifications_path do %>
            <%= render 'layouts/circle' %>
          <% end %>
        </div>
      <% else %>
        <%# ログインしていないときも幅を調整するため %>
        <div class="col-1"></div>
        <div class="col-1"></div>
      <% end %>
    </div>
  </div>
</header>