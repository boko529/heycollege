<header>
  <div class="container-fluid p-0 px-md-4"> 
    <div class="row h-auto mt-2 p-sm-o p-0">
      <%#　スマホ画面用ハンバーガーボタン　%>
      <div class="col-sm-1 d-md-none d-none d-sm-block col-sm-1 d-md-none">
        <button type="button" class="btn btn-success mx-2" data-toggle="collapse" data-target="#aaa"><i class="fas fa-bars"></i>
        </button>
        <div class="collapse position-fixed" id="aaa">
          <div class="list-grou">
            <% if user_signed_in? %>
            <li class="list-group-item">
              <%= link_to root_path do %>
                <i class="fas fa-medal fa-2x"></i></i><span>ランキング</span>
              <% end %>
            </li>
            <li class="list-group-item">
              <%= link_to root_path do %>
                <i class="far fa-plus-square fa-2x"></i><span>作る</span>
              <% end %>
            </li>
            <li class="list-group-item">
              <%= link_to root_path do %>
                <i class="fas fa-question fa-2x"></i><span>ヘルプ</span>
              <% end %>
            </li>
            <li class="list-group-item">
              <%= link_to "#" do %>
                <i class="fas fa-envelope fa-2x"></i><span>コンタクト</span>
              <% end %>
            </li>
            <li class="list-group-item">
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt fa-2x"></i><span>ログアウト</span>
              <% end %>
            </li>
              <% else %>
            <li class="list-group-item">
              <%= link_to root_path do %>
                <i class="fas fa-home fa-2x"></i><span>ランキング</span>
              <% end %>
            </li>
            <li class="list-group-item">
              <%= link_to new_user_registration_path do %>
                <i class="fas fa-sign-in-alt fa-2x"></i><span>サインイン</span>
              <% end %>
            </li>
            <li class="list-group-item">
              <%= link_to new_user_session_path do %>
                <i class="fas fa-sign-in-alt fa-2x"></i><span>ログイン&新規登録</span>
              <% end %>
            </li>
            <li class="list-group-item">
              <%= link_to root_path do %>
                <i class="fas fa-question fa-2x"></i><span>ヘルプ</span>
              <% end %>
            </li>
            <li class="list-group-item">
              <%= link_to "#" do %>
                <i class="fas fa-envelope fa-2x"></i><span>コンタクト</span>
              <% end %>
            </li>
            <% end %>
          </div>
        </div>
      </div>
      <%#　ヘイカレッジロゴ %>
      <div class="logo col-5 col-sm-3 mx-md-0 ml-3">
        <%= link_to image_tag("HeyCollegelogo.png", alt: "ロゴ", width: "150px", id: 'logo'), root_path %>
      </div>
      <div class="search col-5 col-md-6 offset-md-1 offset-1 mx-auto d-none d-sm-block">
        <%# 検索バー %>
        <%= search_form_for @q, class: "form-inline", url: lectures_path do |f| %>
          <div class="input-group justify-content-center">
            <%= f.search_field :name_or_teacher_name_cont, class: "searchbar form-control d-sm-block d-none" ,placeholder: 'クラス名か先生名で検索' %>
            <%# 詳細検索表示ボタン %>
            <div class="input-group-append justify-content-right">
              <%# 条件検索用のボタン(検索フォームはapplication.html.erbでコメントアウト) %>
              <%# <button class="btn btn-outline-success" type="button" data-toggle="collapse" data-target="#collapseSearchLecture" aria-expanded="false" aria-controls="collapseSearchLecture">
                条件
              </button> %>
              <%# f.submit ("検索") , class: 'btn btn-outline-success'%>
              <%= button_tag type: 'submit', class: 'btn btn-outline-success' do %>
                <i class="fas fa-search"></i>
              <% end %>
            </div> 
          </div>
        <% end %>
      </div>
      <%# スマホ画面での検索ボタン(モーダルのスイッチ、出力側はポジション固定してるヘッダーの中に入れると不具合が出るのでapplication.html.erb) %>
      <div class="search col-1 offset-2 d-sm-none d-block">
        <button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#exampleModal">
          <i class="fas fa-search"></i>  
        </button>
      </div>
      
      <% if user_signed_in? %>
        <%#　ユーザーアイコン　%>
        <div class="user col-1 mx-2 d-none d-sm-block">
          <%= link_to user_path(current_user) do %>
            <i class="fas fa-user-circle fa-2x"></i>
          <% end %>
        </div>
        <%#　お知らせアイコン　%>
        <div class="bell col-1 offset-1 offset-sm-0">
          <%= link_to notifications_path do %>
            <%= render 'layouts/circle' %>
          <% end %>
        </div>
      <% else %>
        <%# ログインしていないときも幅を調整するため %>
        <div class="col-1"></div>
        <div class="col-1"></div>
      <% end %>
    </div>
  </div>
</header>
<script>
 
</script>