<footer class="footer">
  <%# スマホ用フッターボタン %>
  <div class="footer_button container d-block d-sm-none fixed-bottom bg-white border-top">
    <div class="row">
    <% if user_signed_in? %>

      <%# ランキング %>
      <div class="footer-rank col">
        <div class="mobile-footer-logo">
        <%= link_to root_path do %>
          <i class="fas fa-medal fa-2x"></i>
        <% end %>
        </div>
        <div class="mobile-footer-logo-let">Ranking</div>
      </div>

      <%# 作る %>
      <div class="footer-add col">
        <div class="mobile-footer-logo">
        <%= link_to new_lecture_path do %>
          <i class="far fa-plus-square fa-2x"></i>
        <% end %>
        </div>
        <div class="mobile-footer-logo-let">New page</div>
      </div>

      <%# ブックマーク %>
      <div class="footer-book col">
        <div class="mobile-footer-logo">
          <%= link_to bookmarks_path do %>
            <i class="far fa-bookmark fa-2x"></i>
          <% end %>
        </div>
        <div class="mobile-footer-logo-let">Bookmark</div>
      </div>

        <%# その他・設定ボタン %>
        <div class="footer-other col" id="open" onclick="openBottomup()">
          <div class="mobile-footer-logo">
            <i class="fas fa-ellipsis-h fa-2x"></i>
          </div>
          <div class="mobile-footer-logo-let">Menu</div>
        </div>
        <div class="mobile-footer-logo-let">My page</div>
        </div>

         <%# ログインしてない時 %>
      <% else %>
        <div class="footer-rank col-4">
          <div class="mobile-footer-logo">
            <%= link_to root_path do %>
              <i class="fas fa-medal fa-2x"></i>
            <% end %>
          </div>
          <div class="mobile-footer-logo-let">Ranking</div>
        </div>

        <div class="footer-login col-4">
          <div class="mobile-footer-logo">
            <%= link_to new_user_session_path do %>
              <i class="fas fa-sign-in-alt fa-2x"></i>
            <% end %>
          </div>
          <div class="mobile-footer-logo-let">Login</div>
        </div>

        <div class="footer-contact col-4">
          <div class="mobile-footer-logo">
            <%= link_to "https://forms.gle/yoxHXthES44B4f6VA", target: :_blank, rel: "noopener noreferrer" do %>
              <i class="fas fa-envelope fa-2x"></i>
            <% end %>
          </div>
          <div class="mobile-footer-logo-let">Contact</div>
        </div>

      <% end %>
    </div>
  </div>


