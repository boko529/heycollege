<% provide(:title, @group.name) %>
<div class="col-lg-8 offset-lg-2" id="box" >
  <div class="group-show" >
    <div class="header_icon">
      <!--ここにヘッダー画像-->
    </div>
    <span class="frame">
      <%= render partial: "shared/group_image/display_icon80", locals: {group: @group} %>
      <span class="float-right-btn">
        <% if @relation &&  @relation.admin %>
          <%= link_to t('.allowothers'), {controller: 'groups', action: 'edit_admin', id: @group.id}, class: 'btn btn-primary' %>
        <% end %>
        <br>
        <% if @profile%>
          <%= link_to t('.profileedit'), {controller: 'group_profiles', action: 'edit', id: @profile.id}, class: 'btn btn-primary' %>
        <% end %>
        <br>
        <%= render 'join_form' %>  
      </span>
      <div class="frame profile">
        <br><%= t('.score') %>：<%= @group.group_point.current_point.round(0) %>
      </div>
      <div class="float_clear"></div>
    </span>
    <div class="group-name">
      <strong><%= @group.name %></strong>
    </div>
    <!--
    <div class="follow">
      <span class=color-brack>
        <!-ここにフォローしている人数->フォロー中
      </span>
      &nbsp;&nbsp;&nbsp;
      <span class=color-brack>
        <!-ここにフォロワーの人数->フォロワー
      </span>
    </div>-->
    <div>
      <%# プロフィール表示 %>
      <% if @relation &&  @relation.admin %>
        <small>
          <% if @profile %>
            <%= t('.profile') %>
            <br><%= @profile.content %>
          <% else %>
            <%# プロフィール作成欄 %>
            <%= link_to t('.makenew'), {controller: 'group_profiles', action: 'new', id: @group.id}, class: 'btn btn-primary' %>
          <% end %>
        </small>
      <% end %>
      <br>
      <div class="sns">
        <% if @group.instagram_name.present? %>
          <small><i class="fab fa-instagram fa-1x"></i><%= link_to @group.instagram_name, @instagram, target: :_blank, rel: "noopener noreferrer" %></small>
        <% elsif @relation &&  @relation.admin %>
          <small><i class="fab fa-instagram fa-1x"></i><%= link_to t('.addaccount'),edit_group_path(@group.id) %></small>
        <% end %>
        &nbsp;&nbsp;
        <% if @group.twitter_name.present? %>
          <small><i class="fab fa-twitter-square fa-1x"></i><%= link_to @group.twitter_name, @twitter, target: :_blank, rel: "noopener noreferrer" %></small>
        <% elsif @relation &&  @relation.admin %>
          <small><i class="fab fa-twitter-square fa-1x"></i><%= link_to t('.addaccount'),edit_group_path(@group.id) %></small>
        <% end %>
      </div>
    </div>
    <div class="member-list">
      <strong class="member"><%= t('.member') %></strong>
      <%= render 'shared/stats_user' %>
      <% @users.each do |user| %>
        <li class="list-group-item list-group-item-action member-list-box">
          <%= render partial: "shared/user_image/display_icon20", locals: {user: user} %><%= link_to display_name(user), user %>
        </li>
      <% end %>
      <div class="page-box">
        <%= paginate @users, param_name: "user_page", theme: 'twitter-bootstrap-4' %>
      </div>
    </div>
  </div>
</div>

