<% provide(:title, @group.name) %>
<div class="col-lg-8 offset-lg-2">
  <div class="group-index">
    <span class="frame">
      <div class="circle">
        <i class="fas fa-users fa-3x"></i>
      </div>
      <span class="float-right-btn">
        <% if @relation &&  @relation.admin %>
          <%= link_to "他ユーザーに編集権を許可", {controller: 'groups', action: 'edit_admin', id: @group.id}, class: 'btn btn-primary' %>
        <% end %>
        <br>
        <% if @profile%>
          <%= link_to "プロフィール編集", {controller: 'group_profiles', action: 'edit', id: @profile.id}, class: 'btn btn-primary' %>
        <% end %>
        <br>
        <%= render 'join_form' %>  
      </span>
      <div class="frame profile">
        <br>スコア：<%= @group.group_point.current_point.round(0) %>
      </div>
      <div class="float_clear"></div>
    </span>
    <div class="group-name">
      <strong><%= @group.name %></strong>
    </div>
    <!--
    <div class="follow">
      <span class=color-brack>
        <!-ここにフォローしている人数->フォロー中
      </span>
      &nbsp;&nbsp;&nbsp;
      <span class=color-brack>
        <!-ここにフォロワーの人数->フォロワー
      </span>
    </div>-->
    <div>
      <%# プロフィール表示 %>
      <% if @relation &&  @relation.admin %>
        <small>
          <% if @profile %>
            プロフィール
            <br><%= @profile.content %>
          <% else %>
            <%# プロフィール作成欄 %>
            <%= link_to "プロフィール作成", {controller: 'group_profiles', action: 'new', id: @group.id}, class: 'btn btn-primary' %>
          <% end %>
        </small>
      <% end %>
      <br>
      <% if @group.instagram_name.present? %>
        <small>Instagram: <%= link_to @group.instagram_name, @instagram, target: :_blank, rel: "noopener noreferrer" %></small>
      <% elsif @relation &&  @relation.admin %>
        <small>Instagram:<%= link_to "アカウント名を追加",edit_group_path(@group.id), target: :_blank, rel: "noopener noreferrer" %></small>
      <% end %>
      &nbsp;&nbsp;
      <% if @group.twitter_name.present? %>
        <small>Twitter:<%= link_to @group.twitter_name, @twitter, target: :_blank, rel: "noopener noreferrer" %></small>
      <% elsif @relation &&  @relation.admin %>
        <small>Twitter:<%= link_to "アカウント名を追加",edit_group_path(@group.id), target: :_blank, rel: "noopener noreferrer" %></small>
      <% end %>
    </div>
    <div class="member-list">
      <strong class="member">メンバー</strong>
      <%= render 'shared/stats_user' %>
      <% @users.each do |user| %>
        <li class="list-group-item list-group-item-action member-list-box">
          <%= link_to display_name(user), user %>
        </li>
      <% end %>
      <div class="page-box">
        <%= paginate @users, param_name: "user_page", theme: 'twitter-bootstrap-4' %>
      </div>
    </div>
  </div>
</div>

