<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="group_info">
      <h1><%= @group.name %></h1>
      <span><%= link_to "view their profile", @group %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats_user' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users join">
        <% @users.each do |user| %>
          <%= link_to user.name, user %>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>