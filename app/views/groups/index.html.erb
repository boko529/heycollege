<% provide(:title, t('.grouplist')) %>
<div class="groups-index">
  <h2 class="title"><%= t('.group') %></h2>
  <p class="new btn btn-primary"><%= link_to t('.makenew'), new_group_path %></p>
  <ul class="groups">
    <% @groups.each do |group| %>
      <div class = "group">
        <span class="class-name p-0">
          <%= link_to group.name, group %>
          <span class="groups-index-groupimg">
            <%= render partial: "shared/group_image/display_icon20", locals: {group: group} %>
          </span>
        </span>
      </div>
    <% end %>
    <%= paginate @groups, param_name: "group_page" 'twitter-bootstrap-4' %> 
  </ul>
</div>