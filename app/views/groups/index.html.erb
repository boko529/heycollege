<% provide(:title, 'グループ一覧') %>
<div class="groups-index">
  <h2 class="title">グループ</h2>
  <p class="new btn btn-primary"><%= link_to "新規グループ作成", new_group_path %></p>
  <ul class="groups">
    <% @groups.each do |group| %>
    <div class = "group">
    <div class="row">
      <span class="class-name p-0"><%= link_to group.name, group %></span>
      </div>
    </div>
    <% end %>
    <%= paginate @groups, param_name: "group_page" 'twitter-bootstrap-4' %> 
  </ul>
</div>