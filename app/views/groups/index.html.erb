<% provide(:title, t('.grouplist')) %>
<div class="groups-index">
  <%# <h2 class="title"> %>
    <%#= t('.group') %>
  <%# </h2> %>

<%# スライドショー %>
  <% if @slides %>
    <div class="slide-container">
      <div class="slide_show">
        <% @slides.each do |slide| %>
          <div class="slide_content">
            <% if !slide.link.blank? %>
              <%= link_to slide.link, target: :_blank, rel: "noopener noreferrer" do %>
                <%= image_tag slide.slide_image.to_s, alt: "スライド", class: "slide" %>
              <% end %>
            <% else %>
                <%= image_tag slide.slide_image.to_s, alt: "スライド", class: "slide" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <p><%= t('.notes') %></p>

  <%# 新規グループ作成コメントアウト %>
  <%# <p class="new btn btn-primary"> %>
    <%#= link_to t('.makenew'), new_group_path %>
  <%# </p> %>
  <ul class="groups">
    <% @groups.each do |group| %>
      <div class = "group">
        <span class="class-name p-0">
          <%= link_to group.name, group %>
          <span class="groups-index-groupimg">
            <%= render partial: "shared/group_image/display_icon20", locals: {group: group} %>
          </span>
        </span>
        <%# グループのプロフィールを部分的に表示する。truncateが省略のメソッドで...含めて()のなかの数字の文字数になるように省略する %>
        <% if group.profile %>
          <div class="group-profile"><%= group.profile.truncate(50) %></div>
        <% end %>
      </div>
    <% end %>
    <%= paginate @groups, param_name: "group_page", theme: 'twitter-bootstrap-4' %> 
  </ul>
</div>

<script>
  $(function() {
    $('.slide_show').slick({
      dots: true,
      autoplay: true,
      autoplaySpeed: 3000, //何ミリ秒で移り変わるかどうかの設定
    });
    // マウスをホバーしたときにそのスライドに移動
    $('.slick-dots li').on('mouseover', function() {
      $('.slide_show').slick('goTo', $(this).index());
    });
  });
  </script>